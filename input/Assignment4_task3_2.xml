<?xml version="1.0" encoding="UTF-8"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../src/io/input/XMLFormat.xsd">

    <boundaries>
        <left>reflecting</left>
        <right>reflecting</right>
        <bottom>reflecting</bottom>
        <top>reflecting</top>
        <rear>outflow</rear>
        <front>outflow</front>
    </boundaries>

    <inputSettings>
        <inputFile>../input/generated-input.txt</inputFile>
    </inputSettings>

    <outputSettings>
        <baseName>ass4_task3_2</baseName>
        <writeFrequency>100</writeFrequency>
    </outputSettings>

    <simulationParameters>
        <end_t>40</end_t>
        <delta_t>0.0005</delta_t>
        <start_t>0.0</start_t>
        <force>lennardJonesForce</force>
        <algorithm>linkedcell</algorithm>
        <loglevel>INFO</loglevel>
        <domain>
            <x>303.0</x>
            <y>180.0</y>
            <z>1</z>
        </domain>
        <domain_start>
            <x>0.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </domain_start>
        <cutoff_radius>3</cutoff_radius>
        <grav_constant>-12.44</grav_constant>
        <walls_flag>false</walls_flag>
    </simulationParameters>

    <checkpoint>
        <merge_file>../input/checkpoint.txt</merge_file>
    </checkpoint>

    <disc>
        <position>
            <x>150.0</x>
            <y>150.0</y>
            <z>0.0</z>
        </position>
        <velocity>
            <x>0.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </velocity>
        <radius>20</radius>
        <distance>1.2</distance>
        <mass>1.0</mass>
        <epsilon>1.0</epsilon>
        <sigma>1.2</sigma>
        <brownian_motion_dimension>2</brownian_motion_dimension>
        <type>1</type>
        <is_outer>false</is_outer>
    </disc>

</simulation>
