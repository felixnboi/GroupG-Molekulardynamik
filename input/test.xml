<?xml version="1.0" encoding="UTF-8"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../src/io/input/XMLFormat.xsd">

    <boundaries>
        <left>outflow</left>
        <right>mirror</right>
        <bottom>reflecting</bottom>
        <top>outflow</top>
        <rear>mirror</rear>
        <front>reflecting</front>
    </boundaries>

    <inputSettings>
        <inputFile>test1</inputFile>
    </inputSettings>

    <outputSettings>
        <baseName>test2</baseName>
        <writeFrequency>1</writeFrequency>
    </outputSettings>

    <simulationParameters>
        <end_t>2</end_t>
        <delta_t>3</delta_t>
